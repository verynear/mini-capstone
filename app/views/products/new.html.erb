<h1>Create a New Product Listing</h1>

<%= form_tag '/products', method: :post do %>
	<div>
	  <%= label_tag :name %>
	  <%= text_field_tag :name %>
	</div>
	<div>
	  <%= label_tag :price %>
	  <%= text_field_tag :price %>
	</div>
	<div>
	  <%= label_tag :image %>
	  <%= text_field_tag :image %>
	</div>
	<div>
	  <%= label_tag :image_2 %>
	  <%= text_field_tag :image_2 %>
	</div>
	<div>
	  <%= label_tag :description %>
	  <%= text_field_tag :description %>
	</div>
	<div>
	<%= label_tag :supplier_id %>
	<%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
	</div>
	<br>
	<div>
	  <%= submit_tag 'Create' %>
	</div>
<% end %>